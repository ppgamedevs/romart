{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
